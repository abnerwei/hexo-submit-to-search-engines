{
  "compilerOptions": {
    "module": "commonjs",                            
    "target": "es6",                               
    "moduleResolution": "node",                     
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,   
    "incremental": true,                          
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                    
    "skipLibCheck": true                                
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "__tests__"
  ]
}
